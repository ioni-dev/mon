<ul>
<%= if @current_driver do %>
  <li><%= @current_driver.email %></li>
  <li><%= link "Settings", to: Routes.driver_settings_path(@conn, :edit) %></li>
  <li><%= link "Log out", to: Routes.driver_session_path(@conn, :delete), method: :delete %></li>
<% else %>
  <li><%= link "Register", to: Routes.driver_registration_path(@conn, :new) %></li>
  <li><%= link "Log in", to: Routes.driver_session_path(@conn, :new) %></li>
<% end %>
</ul>
